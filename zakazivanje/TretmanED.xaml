<Window x:Class="zakazivanje.TretmanED"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zakazivanje"
        mc:Ignorable="d"
        Title="TretmanED" Height="450" Width="800">
    <Window.BindingGroup>
        <BindingGroup/>
    </Window.BindingGroup>
    <UniformGrid Columns="2">
        <Label Content="Naziv:" FontSize="42"/>
        <TextBox Name="txtNaziv" Text="{Binding Naziv, UpdateSourceTrigger=Explicit}"  FontSize="42"/>
        <Label Content="Cena:" FontSize="42"/>
        <TextBox Name="txtCena" Text="{Binding Cena, UpdateSourceTrigger=Explicit}"  FontSize="42"/>
        <Label Content="Ponovni pregled :" FontSize="42"/>
        <TextBox Name="txtPonovniPregled" Text="{Binding PonovniPregled, UpdateSourceTrigger=Explicit}"  FontSize="42"/>

        <Button Content="Odustani" Name="odustani" Click="odustani_Click"	 FontSize="42"/>
        <Button Content="OK" Name="ok" Click="ok_Click"	 FontSize="42"/>


    </UniformGrid>
</Window>
